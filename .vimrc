" Common editor settings
set nu
set tabstop=2 shiftwidth=2 softtabstop=2
set expandtab
set path+=**
set hlsearch
set incsearch
set wildmenu
set autoindent
set nocompatible
filetype plugin indent on
syntax on
hi CursorLine cterm=NONE ctermbg=darkgray ctermfg=white guibg=darkgray guifg=white
set cursorline
set laststatus=2

